<h1>Customer Information</h1>

<p>Enter sensitive customer information, to be stored in the database.</p>

<div>
  <form id="entryForm" method="post" action="/contest">
    <div class="form-group">
      <label for="nameField">Name</label>
      <input class="form-control" type="text" pattern=".+ .+" placeholder="First Last" name="name" id="nameField" required>
    </div>
    <div class="form-group">
      <label for="DOBField">Date of Birth</label>
      <input class="form-control" type="text" pattern="[0-9]{2}/[0-9]{2}/[0-9]{4}" placeholder="mm/dd/yyyy" name="DOB" id="DOBField" required>
    </div>
    <div class="form-group">
      <label for="genderField">Gender</label>
      <select class="form-control" name="gender" id="genderField">
          <option selected="selected" value="none">Choose not to say</option>
          <option value="male">Male</option>
          <option value="female">Female</option>
      </select>
    </div>
    <div class="form-group">
      <label for="phoneField">Phone Number</label>
      <input class="form-control" type="text" pattern="\([0-9]{3}\)[0-9]{3}-[0-9]{4}" placeholder="(###)###-####" name="phone" id="phoneField" required>
    </div>
    <div class="form-group">
      <label for="emailField">Email</label>
      <input class="form-control" type="text" pattern="^[A-Za-z0-9](([_\.\-]?[a-zA-Z0-9]+)*)@([A-Za-z0-9]+)(([\.\-]?[a-zA-Z0-9]+)*)\.([A-Za-z]{2,})$" placeholder="Ex: abc@myemail.com" name="email" id="emailField" required>
    </div>
    <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Submit" id="submitButton">
      <input class="btn btn-primary" type="reset" value="Reset">
      <input class="btn btn-secondary" type="button" value="Generate Input" id="genInput">
    </div>
  </form>
</div>
{{#if errorMsg}}
<div>
  <alert class="alert alert-warning" role="alert">{{errorMsg}}</alert>
</div>
{{/if}}
